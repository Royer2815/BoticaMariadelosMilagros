[HttpPost]
[ValidateAntiForgeryToken]
public IActionResult InicioSesion(string usuario, string contrasena)
{
    // Verifica las credenciales del usuario
    if (_empleadoService.Autenticar(usuario, contrasena))
    {
        return RedirectToAction("MenuPrincipal", "Intranet"); // Redirige si la autenticación es exitosa
    }

    // Muestra error en caso de fallo
    ModelState.AddModelError(string.Empty, "Usuario o contraseña incorrectos.");
    return View(); // Retorna a la vista de inicio de sesión
}  